<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="@dimen/space_10"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_find_share_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_img_loading" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/find_list_padding" >

        <com.siso.app.widget.CircleImageView
            android:id="@+id/item_find_share_avatar"
            android:layout_width="@dimen/small_avatar"
            android:layout_height="@dimen/small_avatar"
            android:src="@drawable/ic_avatar" />

        <TextView
            android:id="@+id/item_find_share_uname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_5"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_find_share_desp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/find_list_padding"
        android:text="" />

</LinearLayout>