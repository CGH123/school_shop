<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/space_5"
    android:background="@color/white" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/find_list_padding">

        <com.siso.app.widget.CircleImageView
            android:id="@+id/item_find_detail_avatar"
            android:layout_width="@dimen/small_avatar"
            android:layout_height="@dimen/small_avatar"
            android:src="@drawable/ic_avatar" />

        <TextView 
            android:id="@+id/item_find_detail_uname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="@dimen/text_size_12"
            android:gravity="center_vertical"/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_find_detail_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_img_loading" />

        <RelativeLayout
            android:id="@+id/find_detail_addTagContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/item_find_detail_img"
            android:layout_alignTop="@+id/item_find_detail_img" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/item_find_detail_desp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/find_list_padding"
        android:text="" />
    

</LinearLayout>
