<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/file"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/folder_file_back"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/camera_album_bg"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/folder_file_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/camera_album_background"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/folder_choose_back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/camera_choose_bg"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/folder_filenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/camera_filenum"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="15sp" />

</LinearLayout>